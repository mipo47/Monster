<UserControl x:Class="MonsterGUI.Controls.UserControlArea"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="25" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<Slider Name="sliderEnergy" Value="4000" Maximum="4000" Minimum="400" ValueChanged="sliderEnergy_ValueChanged"/>
		<Canvas Name="CanvasArea" SizeChanged="CanvasArea_SizeChanged" MouseWheel="CanvasArea_MouseWheel" MouseDown="CanvasArea_MouseDown" MouseUp="CanvasArea_MouseUp" MouseMove="CanvasArea_MouseMove" MouseLeave="CanvasArea_MouseLeave" Grid.Row="1"></Canvas>
	</Grid>
</UserControl>
